{
  "connectorName": "ldap",
  "operationName": "updateEntry",
  "title": "Update LDAP Entry",
  "help": "Updates the attributes of an existing LDAP entry using the specified distinguished name (DN) and update mode.",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "LDAP Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "LDAP"
              ],
              "defaultType": "connection.LDAP",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Connection configuration used to connect to the LDAP server."
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Update Parameters",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "dn",
              "displayName": "Distinguished Name (DN)",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "The distinguished name (DN) of the LDAP entry to update. Example: cn=John Doe,ou=Users,dc=example,dc=com"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "attributes",
              "displayName": "Attributes",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "The attributes to update for the LDAP entry, provided as key-value pairs. Example: {\"mail\":\"john.doe@example.com\",\"telephoneNumber\"=\"123456789\"}"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "mode",
              "displayName": "Update Mode",
              "inputType": "stringOrExpression",
              "defaultValue": "REPLACE",
              "required": "true",
              "helpTip": "The update mode: ADD to add new attributes, REPLACE to overwrite existing values, or REMOVE to delete attributes."
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Output",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "responseVariable",
              "displayName": "Output Variable Name",
              "inputType": "string",
              "deriveResponseVariable": "true",
              "required": "true",
              "helpTip": "Name of the variable to which the output of the operation should be assigned."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "overwriteBody",
              "displayName": "Overwrite Message Body",
              "inputType": "checkbox",
              "defaultValue": "false",
              "helpTip": "Replace the Message Body in Message Context with the output of the operation (This will remove the payload from the above variable).",
              "required": "false"
            }
          }
        ]
      }
    }
  ]
}
