{
  "connectorName": "ldap",
  "operationName": "updateName",
  "title": "Rename LDAP Entry",
  "help": "Renames an existing LDAP entry by changing its distinguished name (DN) from the old name to the new name.",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "LDAP Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "LDAP"
              ],
              "defaultType": "connection.LDAP",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Connection configuration used to connect to the LDAP server."
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Rename Parameters",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "oldName",
              "displayName": "Old Distinguished Name (DN)",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "The current fully qualified distinguished name (DN) of the LDAP entry. Example: cn=John Doe,ou=Users,dc=example,dc=com"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "newName",
              "displayName": "New Distinguished Name (DN)",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "The new fully qualified distinguished name (DN) for the LDAP entry. Example: cn=John Smith,ou=Users,dc=example,dc=com"
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Output",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "responseVariable",
              "displayName": "Output Variable Name",
              "inputType": "string",
              "deriveResponseVariable": "true",
              "required": "true",
              "helpTip": "Name of the variable to which the output of the operation should be assigned."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "overwriteBody",
              "displayName": "Overwrite Message Body",
              "inputType": "checkbox",
              "defaultValue": "false",
              "helpTip": "Replace the Message Body in Message Context with the output of the operation (This will remove the payload from the above variable).",
              "required": "false"
            }
          }
        ]
      }
    }
  ]
}
