{
  "connectorName": "ldap",
  "operationName": "addEntry",
  "title": "Add LDAP Entry",
  "help": "Adds a new entry to the LDAP directory using the specified distinguished name (DN), object class, and attributes.",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "LDAP Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "LDAP"
              ],
              "defaultType": "connection.LDAP",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Connection configuration used to connect to the LDAP server."
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Entry Details",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "dn",
              "displayName": "Distinguished Name (DN)",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "The distinguished name of the LDAP entry to be added. Example: cn=John Doe,ou=Users,dc=example,dc=com"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "objectClass",
              "displayName": "Object Class",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "The object class of the LDAP entry. Example: inetOrgPerson, organizationalUnit"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "attributes",
              "displayName": "Attributes",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "A set of attributes for the new LDAP entry in JSON format. Example: {\"sn\":\"Doe\", \"givenName\":\"John\", \"mail\":\"john.doe@example.com\"}"
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Output",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "responseVariable",
              "displayName": "Output Variable Name",
              "inputType": "string",
              "deriveResponseVariable": "true",
              "required": "true",
              "helpTip": "Name of the variable to which the output of the operation should be assigned."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "overwriteBody",
              "displayName": "Overwrite Message Body",
              "inputType": "checkbox",
              "defaultValue": "false",
              "helpTip": "Replace the Message Body in Message Context with the output of the operation (This will remove the payload from the above variable).",
              "required": "false"
            }
          }
        ]
      }
    }
  ]
}
